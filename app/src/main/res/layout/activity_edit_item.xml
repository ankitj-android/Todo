<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_image"
    tools:context="com.ajasuja.codepath.todo.activity.EditItemActivity">

    <TextView
        android:text="Edit task item below : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editTextTodoItem"
        android:layout_alignStart="@+id/editTextTodoItem"
        android:layout_marginTop="47dp"
        android:id="@+id/textViewEditItem"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="132dp"
        android:id="@+id/editTextTodoItem"
        android:fontFamily="casual" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editTextTodoItem"
        android:layout_alignStart="@+id/editTextTodoItem"
        android:id="@+id/buttonSave"
        android:onClick="onSave"
        android:fontFamily="casual"
        android:background="@mipmap/background_image"
        android:textStyle="normal|bold" />

</RelativeLayout>
